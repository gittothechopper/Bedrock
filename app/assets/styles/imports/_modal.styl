#modal-bg {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    display: none;
    width: 100%;
    height: 100%;
    background: #AAA;
    opacity: 0;
    transition: opacity 0.2s ease-in-out;
    transform: translateZ(0);

    &.active {
        opacity: 0.7;
    }
}

.modal, #References {
    position: absolute;
    top: 50%;
    left: 50%;
    padding: 20px 50px 20px 20px;
    display: none;
    background: #F8F8F8;
    transform: translate3d(-50%, -400px, 0);
    transition: transform 0.1s ease-in-out;

    &.active {
        transform: translate3d(-50%, -50%, 0);
    }

    .close-modal {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 30px;
        height: 30px;
        background: orange;
        border: none;
    }
}